<!DOCTYPE faces-config PUBLIC "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN" "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">

<faces-config xmlns="http://java.sun.com/JSF/Configuration">

	<application>
		<view-handler>
			com.icesoft.faces.facelets.D2DFaceletViewHandler
        </view-handler>
		<locale-config>
			<default-locale>en</default-locale>
			<supported-locale>en</supported-locale>
			<supported-locale>en_US</supported-locale>
			<supported-locale>ru</supported-locale>
			<supported-locale>ru_Ru</supported-locale>
		</locale-config>
		<message-bundle>
			Messages
		</message-bundle>
	</application>
	<!-- Login Bean -->
    <managed-bean>
        <managed-bean-name>loginBean</managed-bean-name>
        <managed-bean-class>com.bookwriter.security.LoginBean
        </managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
	<!-- Basic Tree example bean-->
	<managed-bean>
		<description>
			Backing bean for story tree.
        </description>
		<managed-bean-name>tree</managed-bean-name>
		<managed-bean-class>
			com.bookwriter.store.tree.StoryTree
        </managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<!--
		PanelStack is responsible for setting the selecte panel in the
		panelStack component
	-->
	<managed-bean>
		<description>
			Backing bean for tree example.
        </description>
		<managed-bean-name>panelStack</managed-bean-name>
		<managed-bean-class>
			com.bookwriter.store.tree.PanelStackBean
        </managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<!-- Basic InputFile example bean-->
	<managed-bean>
		<description>
			Backing bean for inputFile example.
        </description>
		<managed-bean-name>uploadFileController</managed-bean-name>
		<managed-bean-class>
			com.bookwriter.store.upload.UploadFileController
        </managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

	<navigation-rule>
		<from-view-id>/index.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/index.iface</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	

</faces-config>
